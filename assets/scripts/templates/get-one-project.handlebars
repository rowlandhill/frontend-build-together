<div data-id="{{project.id}}" class="col-md-12">
    <ul style="list-style-type: none;">
      <li><h4>Project:<strong> {{project.title}}</strong></h4></li>
      <li class="desc"><p><strong>Project Description:</strong> {{project.body}}</p></li>
    </ul>
   </div>
   <form class="update" id="{{project.id}}" data-id="{{project.id}}">

    <div class="container-fluid">
      <br>
       <input class="form-control handlebars-update" type="text" name="project[title]" id="handlebars-project-name" placeholder="update project name">
       <br>
       <div class="form-group">
     <textarea class="form-control handlebars-update" name="project[body]" id="handlebars-project-desc" rows="7" placeholder="update description here"></textarea>
    </div>
    <input data-id="{{project.id}}" type="submit" class="btn btn-default" value="update">
    <br>
    <div class="destroy">
      <br>
       <button data-id="{{project.id}}" id="red-button" class="btn btn-danger" value="delete">delete</button>
     </div>
    </form>

   {{#each project.tasks as |task|}}
   <div class="tasks col-md-12">
     <ul>
       <li><h5><strong>Task: {{task.name}}</strong></h5></li>
       <li class="desc"><strong>Task Description:</strong> {{task.description}}</li>
      </ul>
    </div>
{{/each}}
